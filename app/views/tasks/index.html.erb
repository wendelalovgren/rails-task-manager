<h1>My tasks</h1>
<!--<p>Find me in app/views/tasks/index.html.erb</p>-->

<% @tasks.each do |task| %>
  <p><%= link_to task.title, task_path(task) %><input type="checkbox" checked= ></p>
  <%= link_to 'Edit task', edit_task_path(task) %>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% end %>

